<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="BOTTOM_LEFT" onMouseClicked="#taskList" prefHeight="480.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewTaskController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0" spacing="100.0">
         <children>
            <VBox prefHeight="100.0" prefWidth="250.0">
               <children>
                  <Label text="Task Name:" />
                  <TextField fx:id="taskName" />
               </children>
            </VBox>
            <VBox prefHeight="100.0" prefWidth="132.0">
               <children>
                  <Label text="Priority:" />
                  <ComboBox fx:id="priorityBox" prefWidth="150.0" visibleRowCount="3" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Label alignment="TOP_CENTER" contentDisplay="TOP" text="Task Description: " />
      <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
         <children>
            <Button fx:id="createTaskButton" alignment="CENTER" mnemonicParsing="false" text="Create" />
            <Button fx:id="exit" alignment="TOP_RIGHT" onAction="#backToProjectList" text="Back" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <stylesheets>
      <URL value="@styles.css" />
   </stylesheets>
</VBox>
